{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Session",
  "type": "object",
  "required": [
    "id",
    "module",
    "title",
    "durationSec",
    "level",
    "steps"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "module": {
      "type": "string",
      "enum": [
        "movement",
        "breath",
        "sleep",
        "meditation"
      ]
    },
    "title": {
      "type": "string"
    },
    "level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ]
    },
    "durationSec": {
      "type": "integer",
      "minimum": 60
    },
    "focus": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "adaptations": {
      "type": "object"
    },
    "contraindicationHints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "media": {
      "type": "object"
    }
  }
}