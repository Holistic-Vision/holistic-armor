{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DailyCheckin",
  "type": "object",
  "required": [
    "userId",
    "date",
    "metrics"
  ],
  "properties": {
    "userId": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "metrics": {
      "type": "object",
      "required": [
        "energy",
        "stress",
        "pain",
        "sleep"
      ],
      "properties": {
        "energy": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "stress": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "pain": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        },
        "libido": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        },
        "mood": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "sleep": {
          "type": "object",
          "required": [
            "durationMin",
            "quality"
          ],
          "properties": {
            "durationMin": {
              "type": "integer",
              "minimum": 0,
              "maximum": 1440
            },
            "quality": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            },
            "bedtime": {
              "type": "string"
            },
            "wakeTime": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "hydration": {
          "type": "object",
          "properties": {
            "targetMl": {
              "type": "integer",
              "minimum": 0
            },
            "actualMl": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "notes": {
      "type": "string",
      "maxLength": 2000
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "uri",
          "createdAt"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "photo",
              "video",
              "audio",
              "file"
            ]
          },
          "uri": {
            "type": "string"
          },
          "thumbUri": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}