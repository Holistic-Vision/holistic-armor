{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UserProfile",
  "type": "object",
  "required": [
    "userId",
    "createdAt",
    "preferences",
    "consents"
  ],
  "properties": {
    "userId": {
      "type": "string"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "timezone": {
      "type": "string",
      "default": "Europe/Paris"
    },
    "demographics": {
      "type": "object",
      "properties": {
        "age": {
          "type": "integer",
          "minimum": 0
        },
        "sex": {
          "type": "string",
          "enum": [
            "female",
            "male",
            "intersex",
            "prefer_not_say",
            "custom"
          ]
        },
        "sexCustom": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "medical": {
      "type": "object",
      "description": "Champ volontairement minimal : seulement des limitations d√©claratives, sans diagnostic.",
      "properties": {
        "movementLimitations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allergies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dietaryPreferences": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "redFlagsAcknowledged": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "preferences": {
      "type": "object",
      "required": [
        "theme",
        "notificationMode",
        "language",
        "symbolicLenses"
      ],
      "properties": {
        "theme": {
          "type": "object",
          "properties": {
            "accent": {
              "type": "string"
            },
            "mode": {
              "type": "string",
              "enum": [
                "light",
                "dark",
                "auto"
              ]
            }
          }
        },
        "language": {
          "type": "string",
          "default": "fr"
        },
        "units": {
          "type": "object",
          "properties": {
            "weight": {
              "type": "string",
              "enum": [
                "kg",
                "lb"
              ]
            },
            "height": {
              "type": "string",
              "enum": [
                "cm",
                "in"
              ]
            }
          }
        },
        "notificationMode": {
          "type": "string",
          "enum": [
            "off",
            "light",
            "standard",
            "intensive"
          ]
        },
        "workSchedule": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "day",
                "night",
                "rotating",
                "custom"
              ]
            },
            "notes": {
              "type": "string"
            }
          }
        },
        "symbolicLenses": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "west",
              "mtc_symbolic",
              "ayurveda_symbolic",
              "nordic_symbolic",
              "stoic"
            ]
          }
        },
        "media": {
          "type": "object",
          "properties": {
            "audioEnabled": {
              "type": "boolean"
            },
            "videoEnabled": {
              "type": "boolean"
            },
            "voiceStyle": {
              "type": "string",
              "enum": [
                "neutral",
                "nordic",
                "laic"
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "consents": {
      "type": "object",
      "required": [
        "termsAccepted",
        "privacyAccepted",
        "healthDisclaimerAccepted"
      ],
      "properties": {
        "termsAccepted": {
          "type": "object",
          "properties": {
            "accepted": {
              "type": "boolean"
            },
            "acceptedAt": {
              "type": "string",
              "format": "date-time"
            },
            "version": {
              "type": "string"
            }
          }
        },
        "privacyAccepted": {
          "type": "object",
          "properties": {
            "accepted": {
              "type": "boolean"
            },
            "acceptedAt": {
              "type": "string",
              "format": "date-time"
            },
            "version": {
              "type": "string"
            }
          }
        },
        "healthDisclaimerAccepted": {
          "type": "object",
          "properties": {
            "accepted": {
              "type": "boolean"
            },
            "acceptedAt": {
              "type": "string",
              "format": "date-time"
            },
            "version": {
              "type": "string"
            }
          }
        },
        "marketingOptIn": {
          "type": "object",
          "properties": {
            "accepted": {
              "type": "boolean"
            },
            "acceptedAt": {
              "type": "string",
              "format": "date-time"
            },
            "channel": {
              "type": "string",
              "enum": [
                "email",
                "push",
                "sms"
              ]
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}